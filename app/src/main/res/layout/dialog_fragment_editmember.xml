<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm12"
        android:fontFamily="sans-serif-medium"
        android:text="@string/edit_member"
        android:textAlignment="center"
        android:textColor="@color/Hitam"
        android:textSize="@dimen/font24"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayout_name_editDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_name_editDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_member_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayout_sabuk_editDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_sabuk_editDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan sabuk"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_updateMember_editDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/update"
        android:textColor="@color/Putih"/>

</LinearLayout>